<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.feat_auth.login.LoginActivity">
<!--    kasih scroll view-->

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/normal_state_edittext_outline"
        android:paddingHorizontal="8dp"
        android:paddingVertical="12dp"
        android:layout_margin="16dp"/>
    <TextView
        android:id="@+id/txt_email_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        android:textColor="@color/red_error"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:fontFamily="@font/pjs_extra_bold_italic"
        android:layout_height="wrap_content"
        android:text="Masuk"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        style="@style/TextViewH72Regular" />

</LinearLayout>
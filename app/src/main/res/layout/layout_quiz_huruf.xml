<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_16sdp">

    <TextView
        android:id="@+id/txt_guide"
        style="@style/TextViewH16Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arahkan huruf dibawah berikut sesuai bentuknya"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/txt_abjad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_abjad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/pjs_bold"
        android:text="@string/a"
        android:textColor="@color/teal_600"
        android:textSize="100sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_opt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/pjs_bold"
        android:text="@string/a"
        android:textColor="@color/neutral_300"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_opt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pjs_bold"
        android:text="@string/a"
        android:textColor="@color/neutral_300"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_opt2"
        app:layout_constraintEnd_toStartOf="@+id/txt_opt2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_opt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pjs_bold"
        android:text="@string/a"
        android:textColor="@color/neutral_300"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_opt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_opt2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.502052" />

</androidx.constraintlayout.widget.ConstraintLayout>
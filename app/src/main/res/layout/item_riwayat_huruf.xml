<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    android:background="@drawable/normal_state_edittext_outline">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_huruf"
            style="@style/TextViewH18Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/huruf"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_abjad"
            style="@style/TextViewH18Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:textAllCaps="true"
            android:text="A"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


    <ImageView
        android:id="@+id/img_materi_kapital"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_finished"
        app:layout_constraintBottom_toBottomOf="@+id/txt_materi_kapital"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_materi_kapital" />

    <ImageView
        android:id="@+id/img_materi_non_kapital"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:src="@drawable/ic_finished"
        app:layout_constraintBottom_toBottomOf="@+id/txt_materi_nonkapital"
        app:layout_constraintStart_toStartOf="@+id/img_materi_kapital"
        app:layout_constraintTop_toTopOf="@+id/txt_materi_nonkapital" />

    <ImageView
        android:id="@+id/img_materi_perbedaan"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:src="@drawable/ic_finished"
        app:layout_constraintBottom_toBottomOf="@+id/txt_materi_perbedaan"
        app:layout_constraintStart_toStartOf="@+id/img_materi_non_kapital"
        app:layout_constraintTop_toTopOf="@+id/txt_materi_perbedaan" />

    <ImageView
        android:id="@+id/img_quiz_kapital"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:src="@drawable/ic_finished"
        app:layout_constraintBottom_toBottomOf="@+id/txt_quiz_kapital"
        app:layout_constraintStart_toStartOf="@+id/img_materi_perbedaan"
        app:layout_constraintTop_toTopOf="@+id/txt_quiz_kapital" />

    <ImageView
        android:id="@+id/img_quiz_non_kapital"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:src="@drawable/ic_finished"
        app:layout_constraintBottom_toBottomOf="@+id/txt_quiz_nonkapital"
        app:layout_constraintStart_toStartOf="@+id/img_quiz_kapital"
        app:layout_constraintTop_toTopOf="@+id/txt_quiz_nonkapital" />

    <TextView
        android:id="@+id/txt_materi_kapital"
        style="@style/TextViewH14Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:drawablePadding="@dimen/_6sdp"
        android:text="Materi Huruf Kapital"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_materi_kapital"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/txt_materi_nonkapital"
        style="@style/TextViewH14Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:drawablePadding="@dimen/_6sdp"
        android:text="Materi Huruf Non Kapital"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_materi_kapital"
        app:layout_constraintTop_toBottomOf="@+id/txt_materi_kapital" />

    <TextView
        android:id="@+id/txt_materi_perbedaan"
        style="@style/TextViewH14Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:drawablePadding="@dimen/_6sdp"
        android:text="Membedakan Kapital dan Non Kapital"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_materi_nonkapital"
        app:layout_constraintTop_toBottomOf="@+id/txt_materi_nonkapital" />

    <TextView
        android:id="@+id/txt_quiz_kapital"
        style="@style/TextViewH14Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:drawablePadding="@dimen/_6sdp"
        android:text="Quiz Huruf Kapital"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_materi_perbedaan"
        app:layout_constraintTop_toBottomOf="@+id/txt_materi_perbedaan" />

    <TextView
        android:id="@+id/txt_quiz_nonkapital"
        style="@style/TextViewH14Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:drawablePadding="@dimen/_6sdp"
        android:text="Quiz Huruf Non Kapital"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_quiz_kapital"
        app:layout_constraintTop_toBottomOf="@+id/txt_quiz_kapital" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar_action"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_16sdp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_capt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nama_lengkap"
                style="@style/TextViewH14Medium"
                android:textColor="@color/neutral_700"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:endIconMode="clear_text"
                app:placeholderText="@string/masukan_nama_lengkap"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="@dimen/_4sdp"
                android:textSize="@dimen/_14ssp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/_14ssp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/normal_state_edittext_outline"
                    android:paddingVertical="12dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/txt_capt_kelas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelas"
                android:layout_marginTop="@dimen/_16sdp"
                style="@style/TextViewH14Medium"
                android:textColor="@color/neutral_700"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:endIconMode="clear_text"
                app:placeholderText="Masukan Kelas"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="@dimen/_4sdp"
                android:textSize="@dimen/_14ssp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_kelas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14ssp"
                    android:background="@drawable/normal_state_edittext_outline"
                    android:paddingVertical="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/txt_capt_noabsen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Absen"
                android:layout_marginTop="@dimen/_16sdp"
                style="@style/TextViewH14Medium"
                android:textColor="@color/neutral_700"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:endIconMode="clear_text"
                app:placeholderText="Masukan No Absen"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="@dimen/_4sdp"
                android:textSize="@dimen/_14ssp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_noabsen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14ssp"
                    android:inputType="phone"
                    android:background="@drawable/normal_state_edittext_outline"
                    android:paddingVertical="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/txt_capt_asal_sekolah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asal Sekolah"
                android:layout_marginTop="@dimen/_16sdp"
                style="@style/TextViewH14Medium"
                android:textColor="@color/neutral_700"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:endIconMode="clear_text"
                app:placeholderText="Masukan Asal Sekolah"
                android:textSize="@dimen/_14ssp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_asal_sekolah"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/_14ssp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/normal_state_edittext_outline"
                    android:paddingVertical="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/txt_capt_masuk_sekolah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tahun Masuk Sekolah"
                android:layout_marginTop="@dimen/_16sdp"
                style="@style/TextViewH14Medium"
                android:textColor="@color/neutral_700"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:endIconMode="clear_text"
                app:placeholderText="Masukan Tahun Masuk Sekolah"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="@dimen/_4sdp"
                android:textSize="@dimen/_14ssp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_tahun_masuk_sekolah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textSize="@dimen/_14ssp"
                    android:background="@drawable/normal_state_edittext_outline"
                    android:paddingVertical="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_width="match_parent"
                android:background="@drawable/button_rounded_purple_10px"
                android:fontFamily="@font/pjs_medium"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_8sdp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="Simpan"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
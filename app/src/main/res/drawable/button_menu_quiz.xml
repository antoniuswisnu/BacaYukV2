<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#F0EFFF"/> <!-- Background color -->
                <corners android:radius="16dp"/> <!-- Rounded corners -->
                <stroke android:width="4dp" android:color="#D9D4FF"/> <!-- Outer purple border -->
            </shape>
        </item>

        <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF"/> <!-- Inner background -->
                <corners android:radius="12dp"/> <!-- Slightly smaller radius -->
                <stroke android:width="4dp" android:color="#5018BF"/> <!-- Inner orange border -->
            </shape>
        </item>
    </layer-list>